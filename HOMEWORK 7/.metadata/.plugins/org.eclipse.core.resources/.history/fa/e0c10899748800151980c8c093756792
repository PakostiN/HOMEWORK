import java.util.Scanner;

public class Zad2 {

	public static void main(String[] args) {
		Scanner test = new Scanner(System.in, "UTF-8");
		System.out.println("Напишете програма, която позволява на потребителя да попълва масив с размери 3х4. Изведете масива на екрана.");
		int[][] matrix = new int[3][4];
		System.out.println("Въведете числа: ");
		for (int row = 0; row < matrix.length; row++) {
			for (int col = 0; col < matrix[row].length; col++) {
				int n = test.nextInt();
				matrix[row][col] = n;
				n--;
			}
		}
		for (int row = 0; row < matrix.length; row++) {
			for (int col = 0; col < matrix[row].length; col++) {

				System.out.print(matrix[row][col] + " ");
			}
			System.out.println();

		}
	}
}