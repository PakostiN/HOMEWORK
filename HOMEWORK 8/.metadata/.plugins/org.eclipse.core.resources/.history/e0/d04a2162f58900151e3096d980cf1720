import java.util.Scanner;

public class Zad3 {

	public static void main(String[] args) {
		System.out.println("Дефинирайте метод, който приема един параметър – число, и принтира на екрана четно, ако числото е четно, и нечетно , ако числото е нечетно. Демонстрирайте действието на фукцията с няколко примера");

	}
	public static void EvenOddNumber(){
		Scanner test = new Scanner (System.in, "UTF-8");
		for (int i = 0;;) {
			System.out.println("Въведете число! : ");
			int num = test.nextInt();
			if (num % 2 == 0){
				System.out.println("The number is even");
			}
			if (num % 2 != 0){
				System.out.println("The number is odd");
			}
			if (i > 5){
				System.out.println("Благодаря за вниманието Ви! :) ");
			}
			
			
		}
	}

}
