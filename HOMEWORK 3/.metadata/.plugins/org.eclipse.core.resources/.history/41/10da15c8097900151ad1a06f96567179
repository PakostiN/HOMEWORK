import java.util.Scanner;

public class NizNizz {

	public static void main(String[] args) {
		Scanner test = new Scanner (System.in, "UTF-8");
		System.out.println("Напишете програма, която приема 2 символни низа (string) като вход, и изведете като резултат конкатениран string със „_“ между двата входни низа:");
		System.out.println(" ");
		System.out.println("Въведете вашите символи в първия Низ: ");
		String word  = test.nextLine( );
		System.out.println("Въведете вашите символи във втория Низ: ");
		String word1  = test.nextLine( );
		System.out.print("Резултат: ");
		System.out.print(word);
		System.out.print("_");
		System.out.println(word1);
		
		test.close();
	}

}