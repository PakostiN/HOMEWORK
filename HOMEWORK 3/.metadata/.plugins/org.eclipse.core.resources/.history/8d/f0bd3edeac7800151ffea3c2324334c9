import java.util.Scanner;

public class Delenie {

	public static void main(String[] args) {
		Scanner test = new Scanner (System.in, "UTF-8");
		System.out.println("ПРОГРАМА, КОЯТО ПРИЕМА 2 ЦЕЛОЧИСЛЕНИ ЧИСЛА ЗА ВХОД И ИЗВЕЖДА ОСТАТЪКА ОТ ДЕЛЕНИЕТО НА ЧИСЛАТА:");
		System.out.println("Моля въведете делимо: ");
		System.out.print("X = ");
		int x = test.nextInt( );
		System.out.println("Моля въведете делител: ");
		System.out.print("Y = ");
		int y = test.nextInt( );
		int c = x % y;
		System.out.println(" ");
		System.out.println("C = X % Y");
		System.out.print("Остатък: ");
		System.out.println(c);
	}

}
